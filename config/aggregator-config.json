{
  "version": "1.0.0",
  "aggregator": {
    "import_path": "./import",
    "output_path": "./output",
    "auto_open_reports": true,
    "supported_file_types": ["*_raw_data.json"],
    "max_file_age_days": 30
  },
  "scoring": {
    "adherence_scale": {
      "excellent": 5,
      "good": 4,
      "fair": 3,
      "poor": 2,
      "critical": 1
    },
    "risk_thresholds": {
      "excellent": 0.0,
      "good": 0.1,
      "fair": 0.3,
      "poor": 0.6
    }
  },
  "reporting": {
    "include_system_details": true,
    "max_risk_items_per_section": 10,
    "max_recommendations": 8,
    "color_scheme": {
      "high_risk": "#e74c3c",
      "medium_risk": "#f39c12", 
      "low_risk": "#f1c40f",
      "primary": "#2c3e50",
      "success": "#2ecc71"
    }
  },
  "client_customization": {
    "default_company_name": "Client Name",
    "report_footer": "Generated by BusinessNetworkAggregator"
  }
}